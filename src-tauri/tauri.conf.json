{
  "build": {
    "beforeDevCommand": "git rev-parse HEAD > commit_hash.txt && yarn dev",
    "beforeBuildCommand": "git rev-parse HEAD > commit_hash.txt && yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mdmemo",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      },
      "dialog": {
        "all": false,
        "confirm": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "scope": ["$RESOURCE/**"]
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "startDragging": true,
        "setTitle": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "mdmemo",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["../commit_hash.txt"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 300,
        "resizable": true,
        "title": "mdmemo",
        "width": 400,
        "decorations": false
      }
    ]
  }
}
